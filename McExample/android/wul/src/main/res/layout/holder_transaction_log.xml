<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <View style="@style/DividerVertical"/>

    <TextView
        android:id="@+id/transactionlog_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxLines="1"
        android:padding="1dp"
        android:text=""
        android:textColor="@color/bluegrey_500"
        android:textSize="14sp"
        />

    <View style="@style/DividerVertical"/>

    <TextView
        android:id="@+id/transactionlog_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/bluegrey_500"
        android:textSize="14sp"
        />

    <View style="@style/DividerVertical"/>

    <TextView
        android:id="@+id/transactionlog_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/bluegrey_500"
        android:textSize="14sp"
        android:padding="5dp"
        />

    <View style="@style/DividerVertical"/>

    <TextView
        android:id="@+id/transactionlog_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/bluegrey_500"
        android:textSize="16sp"
        android:padding="10dp"
    />

    <View style="@style/DividerVertical"/>

</LinearLayout>
